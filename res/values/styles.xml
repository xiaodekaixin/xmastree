<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="NoTitleStyle" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <style name="MenuItemStyle">
        <item name="android:background">@drawable/menu_item_bg</item>
        <item name="android:layout_marginTop">@dimen/menu_item_vertical_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="MenuItemTitleStyle">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/menu_item_text_size</item>
        <item name="android:layout_marginTop">@dimen/menu_item_title_vertical_margin</item>
    </style>

</resources>
