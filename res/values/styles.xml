<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="NoTitleStyle" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <style name="MenuItemStyle">
        <item name="android:background">@drawable/menu_item_bg</item>
        <item name="android:layout_marginTop">@dimen/menu_item_vertical_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">2dip</item>
    </style>
    <style name="MenuItemTitleStyle">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/menu_item_text_size</item>
        <item name="android:layout_marginTop">@dimen/menu_item_title_vertical_margin</item>
    </style>
    
    <style name="FunctionItemStyle">
        <item name="android:layout_width">wrap_content</item>:
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>
    
    <style name="ClockItemLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:background">@drawable/ic_clock_item_bg</item>
        <item name="android:layout_marginLeft">@dimen/clock_item_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/clock_item_horizontal_margin</item>
    </style>
    
    <style name="ClockItemTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/menu_item_text_size</item>
    </style>
    
    <style name="ClockItemImgStyle">
        <item name="android:layout_width">@dimen/clock_item_clock_size</item>
        <item name="android:layout_height">@dimen/clock_item_clock_size</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">5dip</item>
        <item name="android:src">@drawable/ic_clock_mark</item>
        <item name="android:contentDescription">""</item>
        <item name="android:tag">icon</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="menuItemSmallIconStyle">
        <item name="android:layout_marginRight">15dip</item>
    </style>
    
    <style name="Widget.GifView" parent="@android:style/Widget"/>

</resources>
